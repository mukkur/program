<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="439.474" Width="581.579">
    <Grid>
        <DataGrid Margin="0,31,10,0" VerticalAlignment="Top" Height="121"
                 ItemsSource="{Binding MyBook}">         
                
        </DataGrid>

        <DataGrid HorizontalAlignment="Left" Margin="329,213,0,0" VerticalAlignment="Top"
                  ItemsSource="{Binding MyCampus}"></DataGrid>
        <DataGrid HorizontalAlignment="Left" Margin="109,347,0,0" VerticalAlignment="Top"
                  ItemsSource="{Binding MyBranches}"></DataGrid>
        <DataGrid HorizontalAlignment="Left" Margin="522,313,0,0" VerticalAlignment="Top"
                  ItemsSource="{Binding MyDepartments}"></DataGrid>
        <Label Content="{Binding MyBookCount}" HorizontalAlignment="Left" Margin="22,0,0,0" VerticalAlignment="Top" Width="238" Height="36"
               />

    </Grid>
</Window>
