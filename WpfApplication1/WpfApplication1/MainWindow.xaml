<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="439.474" Width="581.579">
    <Grid>
        <DataGrid Margin="0,31,10,0" VerticalAlignment="Top" Height="121"
                 ItemsSource="{Binding MyBook}">         
                
        </DataGrid>

        <DataGrid HorizontalAlignment="Left" Margin="309,213,0,0" VerticalAlignment="Top"
                  ItemsSource="{Binding MyCampus}" RenderTransformOrigin="0.417,1.923"></DataGrid>
        <DataGrid HorizontalAlignment="Left" Margin="96,282,0,0" VerticalAlignment="Top"
                  ItemsSource="{Binding MyBranches}"></DataGrid>
        <DataGrid HorizontalAlignment="Left" Margin="502,318,0,0" VerticalAlignment="Top"
                  ItemsSource="{Binding MyDepartments}" RenderTransformOrigin="-6.667,5.923"></DataGrid>
        <Label Content="{Binding MyBookCount}" HorizontalAlignment="Left" Margin="22,0,0,0" Name="count" VerticalAlignment="Top" Width="238" Height="36"
              />
        <Label Content="{Binding MyBranchCount}" HorizontalAlignment="Left" Margin="396,213,0,0" VerticalAlignment="Top" Width="59"/>


    </Grid>
</Window>
